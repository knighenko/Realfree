<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextViewAdvTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipSurfaceColor">@color/chip_color</item>
        <item name="android:textAppearance">@style/chipTextAppearance</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textAlignment">center</item>
    </style>




    <style name="TextViewAdvDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipSurfaceColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>


    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipSurfaceColor">@color/chip_color</item>
        <item name="android:textAppearance">@style/chipTextAppearance</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="chipMinHeight">70dp</item>
    </style>
    <style name="ChipChange" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipSurfaceColor">@color/chip_color</item>
        <item name="android:textAppearance">@style/chipTextAppearance</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="chipMinHeight">50dp</item>
    </style>

    <style name="chipTextAppearance">
        <item name="android:textSize">26sp</item>
    </style>

</resources>