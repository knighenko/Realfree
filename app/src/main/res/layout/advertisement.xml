<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advertisement"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewTitleAdv"
        style="@style/TextViewAdvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/smallImageViewAdv"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:paddingBottom="5dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp">
        <ImageView
            android:id="@+id/favourite_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_24"
            android:layout_gravity="right|top" />
        <ImageView
            android:id="@+id/whats_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_whats"
            android:layout_gravity="center|top" />
    </FrameLayout>
    <TextView
        android:id="@+id/textViewDescription"
        style="@style/TextViewAdvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#DAA24E" />

</LinearLayout>