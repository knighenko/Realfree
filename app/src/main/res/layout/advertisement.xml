<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advertisement"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewTitleAdv"
        style="@style/TextViewAdvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/smallImageViewAdv"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:paddingBottom="5dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/whats_ic"
                android:onClick="advWhatsClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_whats"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:id="@+id/whats_ic_oksana"
                android:onClick="advWhatsClickOksana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_whats_oksana"
                android:layout_marginRight="30dp"
                />
            <ImageView
                android:id="@+id/whats_ic_svitlana"
                android:onClick="advWhatsClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_whats_sveta"
                android:layout_marginRight="30dp"
                />
            <ImageView
                android:id="@+id/favourite_ic"
                android:onClick="advFavClickSvitlana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart_24"
                android:layout_marginRight="30dp"     />
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/textViewDescription"
        style="@style/TextViewAdvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#DAA24E" />

</LinearLayout>